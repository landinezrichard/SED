/*CONTACTO*/

.Contacto
	display inline-block
	width 100%
	
	/*Home*/
	&-home
		display inline-block
		width 100%
		background $red2

		&Title
			color $white
			font-weight 900
			font-size 2.25em
			margin 70px 0 5px
			
		&Txt
			color $white
			font-weight 300
			font-size 1.5em
			max-width 511px
			display inline-block
			margin 0 0 21px
			
		&Form
			display inline-block
			width 100%
			margin 21px 0 65px
			
		&Input
			display inline-block
			width 480px
			height 68px
			background $red2
			border 1px solid $white
			color $white
			font-weight 300
			font-size 1.5em
			text-align center
			padding 0.2em
			box-sizing border-box 
			
		&Input::-webkit-input-placeholder
			color $white
			font-weight 300
		
		&Input:-moz-placeholder
			color $white
			font-weight 300
			
		&Input::-moz-placeholder
			color $white
			font-weight 300
			
		&Input:-ms-input-placeholder
			color $white
			font-weight 300
			
		&Btn
			border none
			background $dark_red
			width 111px
			height 68px
			border 1px solid $white
			font-weight 900
			color $white
			font-size 1.68em